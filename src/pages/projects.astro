---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projetos | Ryan Barros" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projetos finalizados</div>
  </div>

  <HorizontalCard
    title="Jogo da cobrinha(Versão dragon ball)"
    img="/dragao.png"
    desc="O clássico jogo da cobrinha, agora em busca das esferas do dragão em um mundo inspirado em Dragon Ball."
    url="https://snakedragonball.netlify.app/"
    badge="Jogo 100% em JavaScript"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cadastro e listagem de produtos"
    img="/site_ryan.png"
    desc="Cadastro e a lista de produtos em ordem de menor para o maior valor."
    url="https://cadastrolistagem.netlify.app"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projetos em andamento</div>
  </div>

  <HorizontalCard
    title="Cadastro de clientes - Ecommerce"
    img="/cadastro.png"
    desc="Em desenvolvimento."
    url="https://clienteryan.netlify.app/"
    badge="..."
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Gerenciador de projetos"
    img="/post_img.webp"
    desc="Em desenvolvimento."
    url="#"
    badge="Usando 100% React"
  />
  <div class="divider my-0"></div>
</BaseLayout>
